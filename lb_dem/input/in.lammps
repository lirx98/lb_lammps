units si
atom_style sphere
dimension 3
boundary f f f
newton off

region box block 0 0.5 0 0.5 0 0.5 units box
create_box 1 box
region drop block 0.05 0.45 0.05 0.45 0.25 0.45 units box
create_atoms 1 random 2 111 NULL

set atom * diameter 0.01
set type 1 density 2500.0

pair_style gran/hooke/history 1.0e5 2.5e4 50.0 10.0 0.5 1
pair_coeff * *

timestep 0.01
thermo 1

# ���Ӽ� ghost velocity ͬ����granular �������룩
comm_modify vel yes

# ��ʼ�ٶ�
set atom * vx 0.0 vy 0.0 vz 0.01

# �̱�
fix wall all wall/gran hooke 200000.0 NULL 50.0 NULL 0.5 0 zplane 0 0.5
# use the lb plugin to change force
plugin load ./lbforceplugin.so
fix fext all lb/force

# ������
fix integ all nve/sphere
